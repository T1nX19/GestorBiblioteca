<Window x:Class="Ventanatoken.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        Title="Establecer Contraseña" Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="#261C1A">
        <TextBlock Text="Ingrece Token" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontSize="20" Margin="0,20,0,0" Foreground="#D5CCC7"/>

        <TextBlock Text="Contraseña:" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                   Margin="40,0,0,0"  Foreground="#D5CCC7" FontSize="18"/>
        <PasswordBox x:Name="Passbox" 
                     HorizontalAlignment="Left" VerticalAlignment="Center" 
                     Margin="150,0,0,0" Width="180" Height="25" HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"/>

        <Button Content="Aceptar" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                Margin="0,20,0,20" Width="100" Click="Button_Click"/>
    </Grid>
</Window>
